<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
  <figure class="callpost" data-num="1" style="background-image:url('<%=posts[i].image%>');" data-property="border-width" data-from="0" data-to="35px">
    <div class="content">
      <div class="content-wraper">
        <h2><%= posts[i].title %></h2>
        <div class="comment-count">27 Comments <i class="fa fa-comments-o"></i> </div>
        <div class="excerpt"><%=posts[i].bodyPreview()%></div>
        <div class="postinfo"><%=posts[i].author%> <span><%=posts[i].date%></span> </div>
      </div>
    </div>
  </figure>
</div>
